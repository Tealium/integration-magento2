<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="tiqcdn" type="host">*.tiqcdn.com</value>
                <value id="segment" type="host">https://cdn.segment.com</value>
                <value id="facebook" type="host">https://connect.facebook.net</value>
                <value id="magentos" type="host">*.opensourcebrokers.ca</value>
                <value id="tealiumiq" type="host">*.tealiumiq.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="tealiumiq" type="host">*.tealiumiq.com</value>
                <value id="segmentcdn" type="host">https://cdn.segment.com</value>
                <value id="segmentapi" type="host">https://api.segment.io</value>
                <value id="ganalytics" type="host">*.google-analytics.com</value>
                <value id="magentos" type="host">*.opensourcebrokers.ca</value>
            </values>
        </policy>
        <policy id="img-src">
            <values>
                <value id="tealiumiq" type="host">*.tealiumiq.com</value>
                <value id="fbcom" type="host">https://www.facebook.com</value>
            </values>
        </policy>
        <policy id="form-action">
            <values>
                <value id="fbcom" type="host">https://www.facebook.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
