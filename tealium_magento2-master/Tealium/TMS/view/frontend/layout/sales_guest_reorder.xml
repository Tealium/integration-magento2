<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="after.body.start">
            <referenceBlock name="tealium_generic" remove="true"/>
            <block class="Tealium\Tags\Block\Template" name="tealium_guest" as="tealium_guest" template="tealium_tags/guest_sales.phtml" before="tealium_base" >
                <action method="setType">
                    <argument name="tealium_type" xsi:type="string">sales guest reorder</argument>
                </action>
                <action method="setName">
                    <argument name="tealium_name" xsi:type="string">Guest Reorder</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
